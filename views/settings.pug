extends layout

block content
    include nav.pug

    append head
        script(src='/js/settings.js')
    div.container
        div.page-header Manage Settings

        div.col-xs-8.col-sm-6
            form.form-horizontal
                fieldset
                    div.form-group
                        label.control-label(for="sampleRate") Sampling
                        select.form-control(id="sampleRate")
                            option(value="16/44100") 16/44.1                                
                            option(value="24/48000") 24/48
                            option(value="24/96000") 24/96
                            option(value="24/192000") 24/192
                fieldset                        
                    div.form-group
                        button.btn.btn-primary(type="submit" id="save") Save

            ul.list-group(id ="log")